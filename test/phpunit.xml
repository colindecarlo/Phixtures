<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         bootstrap="../bootstrap.php"
         cacheTokens="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         mapTestClassNameToCoveredClassName="false"
         printerClass="PHPUnit_TextUI_ResultPrinter"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         testSuiteLoaderClass="PHPUnit_Runner_StandardTestSuiteLoader"
         strict="false">

	<php>
		<var name="MYSQL_DSN" value="mysql:dbname=information_schema;host=127.0.0.1" />
		<var name="MYSQL_USER" value="root" />
		<var name="MYSQL_PASSWORD" value="localdev" />
		<var name="MYSQL_DBNAME" value="phixtures" />
	</php>

	<testsuites>
		<testsuite name="All" suffix="Test.php">
			<directory>.</directory>
		</testsuite>
	</testsuites>
</phpunit>
